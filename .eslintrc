{
  "extends": ["airbnb", "prettier", "eslint:recommended"],
  "plugins": ["react", "jsx-a11y", "import", "jest"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "classes": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "ignorePatterns": ["labo/webgl/shaders/", "labo/lib/", "src/store/"],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": 0,
    "react/display-name": 0,
    "no-console": 0,
    "no-bitwise": 0,
    "no-plusplus": 0,
    "comma-dangle": 0,
    "import/prefer-default-export": 0,
    "max-len": ["error", 100]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack/prod.js"
      }
    }
  }
}

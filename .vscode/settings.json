{
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "eslint.validate.javascript": true,
  "eslint.packageManager": "npm",
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": true
  },
  "files.exclude": {
    "**/node_modules": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
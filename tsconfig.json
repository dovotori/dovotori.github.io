{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ES2018", "DOM"],
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "Assets/*": ["public/*"],
      "Assets": ["public"],
      "Labo/*": ["labo/*"],
      "Labo": ["labo"],
      "src/*": ["src/*"],
      "src": ["src"]
    },
    "types": ["@webgpu/types"]
  },
  "include": ["src", "labo", "src/types/styled.d.ts"],
  "exclude": ["node_modules", "build"]
}
